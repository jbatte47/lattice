{
  "$schema": "./theme.schema.json",
  // Default Lattice theme (semantic tokens only).
  "color": {
    "semantic": {
      "text-primary": "#22252a",
      "text-secondary": "#555a63",
      "text-muted": "#8c919b",
      "text-disabled": "#a9adb5",
      "text-inverse": "#ffffff",
      "bg-surface-default": "#ffffff",
      "bg-surface-muted": "#f7f7f8",
      "bg-surface-raised": "#ffffff",
      "bg-layer-0": "#ffffff",
      "bg-layer-1": "#f7f7f8",
      "bg-layer-2": "#eeeff1",
      "bg-layer-3": "#d9dbe0",
      "border-subtle": "#d9dbe0",
      "border-strong": "#a9adb5",
      "border-inverse": "#555a63",
      "focus-ring": "#3b6cff",
      "link-default": "#3b6cff",
      "intent-primary": "#3b6cff",
