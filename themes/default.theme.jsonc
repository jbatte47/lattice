      "space-inset-loose": { "value": 24, "unit": "px" }
    }
  },
  "typography": {
    "semantic": {
      "type-body": {
        "fontFamily": ["system-ui", "-apple-system", "Segoe UI", "sans-serif"],
        "fontSize": { "value": 16, "unit": "px" },
        "fontWeight": 400,
        "letterSpacing": { "value": 0, "unit": "em" },
